#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset


python /app/manage.py migrate --noinput
python /app/manage.py collectstatic --noinput
python /app/manage.py loaddata /app/compose/production/django/site.json
python /app/manage.py loaddata /app/compose/production/django/symbols.json


/usr/local/bin/gunicorn config.wsgi --bind 0.0.0.0:5000 --chdir=/app

